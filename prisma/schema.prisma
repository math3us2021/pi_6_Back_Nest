generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// schema.prisma

model User {
  id                   String   @id @default(uuid())
  name                 String
  email                String   @unique
  password             String
  phone                String
  dateRegistered       DateTime @default(now())
  favoriteGenres       String
  receiveNotifications Boolean  @default(false)
  isAdmin              Boolean  @default(false)
  logins               Login[]
  movies               movies[]
}

model Login {
  id       String   @id @default(uuid())
  email    String
  password String
  dtAccess DateTime @default(now())
  userId   String
  user     User     @relation(fields: [userId], references: [id])
}

model movies {
  id                  String   @id @default(uuid())
  image               String
  title               String
  genreId             String
  originalLanguage    String
  releaseDate         DateTime
  runtime             Int
  statusId            String
  productionCompanies String
  overview            String
  popularity          Int
  voteAverage         Int
  voteCount           Int
  notification        Boolean  @default(false)
  status              status[]
  genre               genre[]
  user                User[]
}

model status {
  id     String   @id @default(uuid())
  status String
  movies movies[]
}

model genre {
  id     String   @id @default(uuid())
  genre  String
  movies movies[]
}
